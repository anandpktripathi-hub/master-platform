# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api
API_VERSION=v1

# Database
DATABASE_URL=mongodb://localhost:27017/master-platform

# JWT (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-to-a-long-random-string-min-32-characters
JWT_EXPIRATION=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=noreply@yourdomain.com

# Frontend
FRONTEND_URL=http://localhost:3000

# Public App URL used in emails, redirects, and PDFs
# In production, set this to your main SaaS app URL, e.g.
# PUBLIC_APP_URL=https://app.yoursaas.com
PUBLIC_APP_URL=http://localhost:3000

# Company identity for invoices / branding fallbacks
COMPANY_NAME=Your SaaS Company
COMPANY_ADDRESS=123 SaaS Street, City, Country

# Multi-Tenant Domain Configuration
# Comma-separated list of base domains (domains that represent the landlord/platform)
# Subdomains of these will be treated as tenant subdomains
# Examples:
#   - localhost:3000 → tenant1.localhost:3000 is a tenant subdomain
#   - myapp.com → tenant1.myapp.com is a tenant subdomain
BASE_DOMAINS=localhost:3000,localhost

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Stripe (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Razorpay (Optional - for payments in India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
