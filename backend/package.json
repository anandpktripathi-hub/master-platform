{
    "name": "master-platform-backend",
    "version": "1.0.0",
    "description": "Master Platform Backend - NestJS API",
    "author": "Anand Prakash Tripathi",
    "private": true,
    "scripts": {
        "start": "nest start",
        "start:dev": "npm run build && node dist/backend/src/main.js",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/backend/src/main.js",
        "dev:db": "cd .. && docker compose up -d mongodb",
        "dev:redis": "cd .. && docker compose up -d redis",
        "start:dev:with-db": "npm run dev:db || echo \"[dev:db] Docker not available or not running. Please ensure MongoDB is running on localhost:27017. Continuing to start backend...\" && npm run start:dev",
        "start:dev:with-services": "npm run dev:db && npm run dev:redis || echo \"[dev:services] Docker or services not available. Ensure MongoDB and Redis are running on localhost (27017, 6379). Continuing to start backend...\" && npm run start:dev",
        "build": "node --max-old-space-size=4096 ./node_modules/@nestjs/cli/bin/nest.js build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:unit": "jest --testPathPattern=\\.spec\\.ts$",
        "test:e2e": "jest --testPathPattern=\\.e2e-spec\\.ts$ --runInBand",
        "test:tenant-isolation": "jest --testPathPattern=multi-tenant-isolation\\.e2e-spec\\.ts$",
        "test:theme": "jest --testPathPattern=theme-multi-tenant\\.e2e-spec\\.ts$",
        "start:pm2": "pm2 start ecosystem.config.js --env production",
        "stop:pm2": "pm2 stop ecosystem.config.js",
        "restart:pm2": "pm2 restart ecosystem.config.js",
        "docker:build": "docker build -t smetasc-saas-backend .",
        "docker:run": "docker run -p 3000:3000 smetasc-saas-backend",
        "scan-fix": "node ./scripts/scan-and-fix-corruption.js --fix",
        "db:migrate": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.ts",
        "db:migrate:revert": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./src/data-source.ts",
        "db:drop": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d ./src/data-source.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.969.0",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.0.0",
        "@nestjs/mongoose": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^11.1.11",
        "@nestjs/schedule": "^4.0.0",
        "@nestjs/swagger": "^11.2.4",
        "@nestjs/terminus": "^10.0.0",
        "@nestjs/typeorm": "^11.0.0",
        "@paypal/checkout-server-sdk": "^1.0.3",
        "@types/nodemailer": "^7.0.5",
        "axios": "^1.7.2",
        "bcryptjs": "^3.0.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "express-rate-limit": "^8.2.1",
        "googleapis": "^170.0.0",
        "helmet": "^7.1.0",
        "mongoose": "^8.0.3",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.12",
        "passport": "^0.7.0",
        "passport-github2": "^0.1.12",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "prom-client": "^15.1.3",
        "redis": "^5.10.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "winston": "^3.18.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^10.0.3",
        "@nestjs/testing": "^11.1.9",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.10.6",
        "jest": "^29.7.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^1.7.1",
        "typescript": "^5.3.3"
    }
}
