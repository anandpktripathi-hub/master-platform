{
    "name": "master-platform-backend",
    "version": "1.0.0",
    "description": "Master Platform Backend - NestJS API",
    "author": "Anand Prakash Tripathi",
    "private": true,
    "scripts": {
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "start:pm2": "pm2 start ecosystem.config.js --env production",
        "stop:pm2": "pm2 stop ecosystem.config.js",
        "restart:pm2": "pm2 restart ecosystem.config.js",
        "docker:build": "docker build -t smetasc-saas-backend .",
        "docker:run": "docker run -p 3000:3000 smetasc-saas-backend",
        "scan-fix": "node ./scripts/scan-and-fix-corruption.js --fix"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.3.0",
        "@nestjs/jwt": "^11.0.1",
        "@nestjs/mongoose": "^10.0.2",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^10.3.0",
        "@nestjs/swagger": "^11.2.3",
        "@nestjs/terminus": "^11.0.0",
        "bcryptjs": "^3.0.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "helmet": "^7.1.0",
        "mongoose": "^8.0.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "prom-client": "^15.1.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "winston": "^3.18.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^10.0.3",
        "@nestjs/testing": "^11.1.9",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.10.6",
        "supertest": "^7.1.4",
        "typescript": "^5.3.3"
    }
}
