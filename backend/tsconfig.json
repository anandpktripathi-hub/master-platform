{
  "compilerOptions": {
    "types": ["jest", "node"],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@schemas/*": [
        "database/schemas/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@dto/*": [
        "modules/*/dto"
      ],
      "@common-schemas/*": [
        "../../src/common/schemas/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/**/*", "../../src/common/schemas/**/*"],
  "exclude": ["node_modules", "dist"]
}
